<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/colorWhite">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movieGenreText"
        android:layout_below="@+id/movieTypeText"
        android:layout_alignLeft="@+id/movieTypeText"
        android:layout_alignStart="@+id/movieTypeText" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movieRatingBar"
        android:numStars="10"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_below="@+id/movieGenreText"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/movieGenreText"
        android:layout_alignStart="@+id/movieGenreText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movieTypeText"
        android:layout_below="@+id/movieReleaseText"
        android:layout_alignLeft="@+id/movieReleaseText"
        android:layout_alignStart="@+id/movieReleaseText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movieReleaseText"
        android:layout_below="@+id/movieTitleText"
        android:layout_alignLeft="@+id/movieTitleText"
        android:layout_alignStart="@+id/movieTitleText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movieTitleText"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>